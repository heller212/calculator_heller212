<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:layout_marginLeft="8dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pink_324175_1920"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/calculation_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/_calculation_result"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/table"
        android:layout_below="@+id/calculation_result">

        <TableRow>
        <Button
            android:text="@string/_1"/>

        <Button
            android:text="@string/_2"/>

        <Button
            android:text="@string/_3"/>
        </TableRow>

        <TableRow>
        <Button
            android:text="@string/_4"/>

        <Button
            android:text="@string/_5"/>

        <Button
            android:text="@string/_6"/>
        </TableRow>

        <TableRow>
        <Button
            android:text="@string/_7"/>

        <Button
            android:text="@string/_8"/>

        <Button
            android:text="@string/_9"/>
        </TableRow>

        <TableRow>
        <Button
            android:text="@string/_0"/>

            <Button
                android:layout_weight="2"
                android:text="@string/_equals" />
        </TableRow>

    </TableLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/table"
        android:layout_below="@+id/calculation_result">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_plus" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_minus" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_divide" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_multiply" />

    </LinearLayout>

</RelativeLayout>